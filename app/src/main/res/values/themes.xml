<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- App theme after splash -->
    <style name="Theme.Bookify" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
    </style>

    <!-- Splash theme (keeps system bars legible on blue bg) -->
    <style name="Theme.Bookify.Splash" parent="Theme.Material3.Light.NoActionBar">
        <item name="android:statusBarColor">@color/splash_blue</item>
        <item name="android:navigationBarColor">@color/splash_blue</item>
    </style>

</resources>
